<!-- Offline modal (request reload) -->
<div class="modal fade" id="offlineModal" data-backdrop="static" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">You have been disconnected from the server</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Reconnection attempts failed or the server forced a closure, you are now required to reload the
                page to continue chatting
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="reloadPageButton" data-dismiss="modal">Reload</button>
                <!--                <button type="button" class="btn btn-primary">Save changes</button>-->
            </div>
        </div>
    </div>
</div>

